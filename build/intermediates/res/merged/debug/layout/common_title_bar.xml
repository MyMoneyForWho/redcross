<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_background" >

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" >

        <ImageButton
            android:id="@+id/title_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/title_txt_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@drawable/title_btn_selector"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/title_txt_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dip"
            android:layout_marginRight="10dip"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@drawable/title_btn_selector"
            android:textSize="@dimen/text_size" />

        <ImageButton
            android:id="@+id/title_btn_right"
            style="@style/MarginStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dip"
            android:layout_marginRight="10dip"
            android:background="@android:color/transparent" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/E:/studio-work-space/redcross/res/layout/common_title_bar.xml -->